<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.app.moviesapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title1"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MoviesMainActivity"
            android:label="@string/title1"
            android:launchMode="singleTop">
            <!-- TODO AWESOME This will make sure you return to the single main activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieDetailsActivity"
            android:label="@string/title2"
            android:parentActivityName=".MoviesMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MoviesMainActivity" />
        </activity>
    </application>

</manifest>