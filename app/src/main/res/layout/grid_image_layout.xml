<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_padding"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_descriptor"
        android:padding="@dimen/no_padding"
        android:scaleType="fitCenter" />
    <TextView
        android:id="@+id/img_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_padding"
        android:padding="@dimen/no_padding"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/tv_view_holder_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_padding"
        android:padding="@dimen/no_padding"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/tv_list_item_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_padding"
        android:padding="@dimen/no_padding"
        android:visibility="invisible" />
</FrameLayout>